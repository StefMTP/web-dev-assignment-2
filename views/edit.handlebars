<h2>Edit the book: {{book.title}}</h2>

<form id="edit-form" method="POST" action="/edit/{{book.workid}}">
    <div class="form-group">
        <label for="title">Edit title:</label>
        <input type="text" name="title" value="{{book.title}}">
    </div>
    <div class="form-group">
        <label for="author">Edit author:</label>
        <input type="text" name="author" value="{{book.author}}">
    </div>
    <div class="form-group">
        <label for="review">Your Short Review:</label>
        <textarea name="review">{{book.review}}</textarea>
    </div>
    <div id="btn-group">
        <button class="btn" type="submit">Save changes</button>
        <a class="btn" href="/myList">Cancel</a>
    </div>
</form>